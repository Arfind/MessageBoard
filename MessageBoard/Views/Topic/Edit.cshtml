@model MessageBoard.Models.Topic
@{
    ViewBag.Title = "编辑主题";
    Layout = "~/Views/Shared/_MyLayout2.cshtml";
}

<div class="layui-container fly-marginTop">
    <div class="fly-panel" pad20 style="padding-top: 5px;">
        <div class="layui-form layui-form-pane">
            <div class="layui-tab layui-tab-brief" lay-filter="user">
                <ul class="layui-tab-title">
                    <li class="layui-this">发表新留言主题</li>
                </ul>
                <div class="layui-form layui-tab-content" id="LAY_ucm" style="padding: 20px 0;">
                    <div class="layui-tab-item layui-show">
                        <form action="/Topic/Edit" method="post">
                            <input type="hidden" name="TopicId" value="@Model.TopicId" />
                            <input type="hidden" name="UserId" value="@Model.UserId" />
                            <input type="hidden" name="CreateTime" value="@Model.CreateTime" />

                            <div class="layui-row layui-col-space15 layui-form-item">
                                <div class="layui-col-md9">
                                    <label class="layui-form-label">标题</label>
                                    <div class="layui-input-block">
                                        <input type="text" name="TopicTitle" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.TopicTitle">
                                    </div>
                                </div>
                            </div>
                            <div class="layui-row layui-col-space15 layui-form-item">
                                <div class="layui-col-md9">
                                    <label class="layui-form-label">详细描述</label>
                                    <div class="layui-input-block">
                                        <input type="text" name="TopicDescription" required lay-verify="required" placeholder="详细描述" autocomplete="off" class="layui-input" value="@Model.TopicDescription">
                                    </div>
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <button class="layui-btn" lay-submit>立即修改</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>