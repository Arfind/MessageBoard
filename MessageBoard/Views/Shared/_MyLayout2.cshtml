<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="~/Content/global.css" />
</head>
<body>
    <div class="layui-layout-admin">
        <div class="layui-header">
            <ul class="layui-nav layui-bg-cyan">
                <li class="layui-nav-item"><a href="/Topic/Index">在线留言本</a></li>
                <li class="layui-nav-item"><a href="/Topic/MyTopic">我的留言主题</a></li>
                <li class="layui-nav-item"><a href="">我的留言</a></li>
            </ul>
            <ul class="layui-nav layui-layout-right layui-bg-cyan">
                <li class="layui-nav-item"><a href="/User/Detail">@Session["Username"]</a></li>
                <li class="layui-nav-item"><a href="/User/Login">退出登陆</a></li>
            </ul>
        </div>

        <div class="layui-layout-body">
            @RenderBody()
        </div>
    </div>

    <script src="~/layui/layui.js"></script>
    <script>
        layui.use('form', function () {
            var form = layui.form;
            form.render();
        });
    </script>
</body>
</html>
